<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#8fcf0f" />
            <stroke android:width="1dp" android:color="#575757" />
            <corners android:radius="5dp" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#c0c0c0" />
                    <stroke android:width="1dp" android:color="#9b9b9b" />
                    <corners android:radius="5dp" />
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
                </shape>
            </item>
            <item>
                <layer-list>
                    <item>
                        <shape>
                            <solid android:color="#cfff" />
                            <stroke android:width="0px" />
                            <corners android:radius="5dp" />
                            <padding android:left="0px" android:top="1dp" android:right="0px" android:bottom="0px" />
                        </shape>
                    </item>
                    <item>
                        <shape>
                            <gradient android:startColor="#adadad" android:endColor="#717171" android:angle="270" />
                            <stroke android:width="0px" />
                            <corners android:radius="5dp" />
                            <padding android:left="10dp" android:top="20dp" android:right="10dp" android:bottom="20dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</layer-list>