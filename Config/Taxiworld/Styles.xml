<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_resizable</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="LinkText">
        <item name="android:textColor">#04328c</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="SearchButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#423f3a</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#bfffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">50dip</item>
    </style>
    
    <style name="FormLabelText">
        <item name="android:textSize">16dip</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#afafaf</item>
        <item name="android:shadowColor">#bfffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingTop">5dp</item>>
        <item name="android:paddingBottom">3dp</item>>
    </style>
    
    
    <style name="ButtonTextLarge">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dip</item>
    </style>
    
    <style name="ButtonTextGray">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#656565</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:padding">5dip</item>
        <item name="android:shadowRadius">0</item>
    </style>
    <style name="ListTitle">
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>
    <style name="ListSubTitle">
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#a5a5a5</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#423f3a</item>
    </style>
    <style name="ViewTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="BigTitleText">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="SmallTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="FinePrint">
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">#aaaaaa</item>
    </style>
    <style name="BigTitleTextBlack">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SimpleText" >
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="GrayText" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#646464</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="SimpleTextItem" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>
    <style name="HeaderGroupTitle" >
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#0A1F45</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailText"  >
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#646464</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ListItemLabel" >
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ListItemValue" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ListItemSpinnerValue" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#0066cc</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.Modal" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
</resources>