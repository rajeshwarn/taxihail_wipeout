<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#c0c0c0" />
      <stroke
          android:width="1dp"
          android:color="#9b9b9b" />
      <corners android:radius="7dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <layer-list>
      <item>
        <shape>
          <solid android:color="#e3e3e3" />
          <stroke
              android:width="1dp"
              android:color="#889b9b9b" />
          <corners android:radius="7dp" />
          <padding
              android:left="1dp"
              android:top="1dp"
              android:right="1dp"
              android:bottom="1dp" />
        </shape>
      </item>
      <item>
        <shape >
          <solid android:color="#fff" />
          <stroke android:width="0px" />
          <corners android:radius="7dp" />
          <padding
              android:left="0px"
              android:top="1dp"
              android:right="0px"
              android:bottom="0px" />
        </shape>
      </item>
      <item>
        <shape>
          <gradient
              android:startColor="#e3e3e3"
              android:endColor="#cfcfcf"
              android:angle="270" />
          <stroke android:width="0px" />
         <corners android:radius="7dp" />
          <padding
              android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>