<?xml version="1.0" encoding="UTF-8" ?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" android:drawable="@drawable/cell_selected"  />
 <item android:state_pressed="false">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="1px" android:left="5dip">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">                                                     
                    <solid android:color="@color/listitem_cell_border_color" />   
                    <corners android:radius="0dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"  android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
                </shape>
            </item>            
            <item android:left="0px" android:right="0px" android:bottom="1px">              
                <shape android:shape="rectangle">                
                     <solid android:color="@color/listitem_cell_background_color" />      
                     <corners android:radius="0dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"  android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
                </shape>
          </item>        
        </layer-list>              
    </item>
</selector>