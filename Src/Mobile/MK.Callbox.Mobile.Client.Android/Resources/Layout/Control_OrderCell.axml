<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/com.apcurium.MK.TaxiHailDemo"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:minWidth="25px"
    android:minHeight="25px">
    <apcurium.mk.callbox.mobile.client.controls.TextViewColor
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="190dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:id="@+id/dateTextView"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:textSize="25dip"
        local:MvxBind="{&apos;Text&apos;:{&apos;Path&apos;:&apos;FormatedCreatedDate&apos;},&apos;TextSize&apos;:{&apos;Path&apos;:&apos;TextSize&apos;},&apos;TextColor&apos;:{&apos;Path&apos;:&apos;TextColor&apos;,&apos;Converter&apos;:&apos;ColorEnumToAndroidColor&apos;}}"
        android:layout_gravity="left|center_vertical" />
    <apcurium.mk.callbox.mobile.client.controls.TextViewColor
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="90dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:id="@+id/orderNumberTextView"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dip"
        local:MvxBind="{&apos;Text&apos;:{&apos;Path&apos;:&apos;IbsOrderIdString&apos;},&apos;TextColor&apos;:{&apos;Path&apos;:&apos;TextColor&apos;,&apos;Converter&apos;:&apos;ColorEnumToAndroidColor&apos;}}"
        android:layout_gravity="left|center_vertical" />
    <apcurium.mk.callbox.mobile.client.controls.TextViewColor
        android:text="Medium Textfffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="190dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:id="@+id/orderStatusTextView"
        android:singleLine="false"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dip"
        local:MvxBind="{&apos;Text&apos;:{&apos;Path&apos;:&apos;StatusDescription&apos;},&apos;TextColor&apos;:{&apos;Path&apos;:&apos;TextColor&apos;,&apos;Converter&apos;:&apos;ColorEnumToAndroidColor&apos;}}"
        android:layout_gravity="left|center_vertical" />
    <apcurium.mk.callbox.mobile.client.controls.StyledButton
        android:text="Cancel Order"
        local:ButtonStyle="Red"
        style="@style/ButtonText"
        android:layout_width="100dip"
        android:layout_height="fill_parent"
        android:id="@+id/cancelOrderButton"
        android:layout_weight="1"
        android:background="@drawable/red_button"
        local:MvxBind="{&apos;Click&apos;:{&apos;Path&apos;:&apos;CancelOrder&apos;},&apos;Visibility&apos;:{&apos;Path&apos;:&apos;CanBeCancelled&apos;,&apos;Converter&apos;:&apos;Visibility&apos;}}"
        android:layout_gravity="center" />
</LinearLayout>