<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape>
      <solid android:color="#8fcf0f" />
      <stroke
          android:width="1dp"
          android:color="#53933f" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="1dp"
          android:top="1dp"
          android:right="1dp"
          android:bottom="1dp" />
    </shape>
  </item>
  <item >
    <shape >
      <solid android:color="#cfff" />
      <stroke android:width="0px" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="0px"
          android:top="1dp"
          android:right="0px"
          android:bottom="0px" />
    </shape>
  </item>
  <item>
    <selector>
      <item android:state_pressed="true" >
        <shape>
          <solid
              android:color="#70c656" />
          <stroke android:width="0px"/>
          <corners
              android:radius="2dp" />
          <padding
              android:left="10dp"
              android:top="20dp"
              android:right="10dp"
              android:bottom="20dp" />
        </shape>
      </item>
      <item>
        <shape>
          <gradient
              android:startColor="#8fcf0f"
              android:endColor="#57b109"
              android:angle="270" />
          <stroke android:width="0px" />
          <corners
              android:radius="2dp" />
          <padding
              android:left="10dp"
              android:top="20dp"
              android:right="10dp"
              android:bottom="20dp" />
        </shape>
      </item>
    </selector>
  </item>
</layer-list>
