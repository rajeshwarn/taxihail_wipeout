<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
     <layer-list>
      <item android:right="-2dp">
        <shape>
          <solid android:color="#74acfb" />
          <stroke
              android:width="1dp"
              android:color="#5289d7" />
          <corners
              android:radius="2dp" />
          <padding
              android:left="1dp"
              android:top="1dp"
              android:right="1dp"
              android:bottom="1dp" />
        </shape>
      </item>
    
      <item android:right="-2dp">
        <shape>
          <gradient
              android:startColor="#2757aa"
              android:endColor="#74acfb"
              android:angle="270" />
          <stroke android:width="0px" />
          <corners
              android:radius="2dp" />
          <padding
              android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>
  
