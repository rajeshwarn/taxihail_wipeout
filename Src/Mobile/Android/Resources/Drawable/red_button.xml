<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#4e0000" />
      <stroke
          android:width="1dp"
          android:color="#171717" />
      <corners
          android:radius="7dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <layer-list>
      <item>
        <shape>
          <solid android:color="#f84a4a" />
          <stroke
              android:width="1dp"
              android:color="#b63540" />
          <corners
              android:radius="7dp" />
          <padding
              android:left="1dp"
              android:top="1dp"
              android:right="1dp"
              android:bottom="1dp" />
        </shape>
      </item>
      <item>
        <shape >
          <solid android:color="#cfff" />
          <stroke android:width="0px" />
          <corners
              android:radius="7dp" />
          <padding
              android:left="0px"
              android:top="1dp"
              android:right="0px"
              android:bottom="0px" />
        </shape>
      </item>
      <item>
        <shape>
          <gradient
              android:startColor="#f84a4a"
              android:endColor="#f42e2e"
              android:angle="270" />
          <stroke android:width="0px" />
          <corners
              android:radius="7dp" />
          <padding
              android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>