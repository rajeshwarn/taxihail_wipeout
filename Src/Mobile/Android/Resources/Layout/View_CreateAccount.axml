<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dip"
        android:paddingRight="7dip"
        android:paddingLeft="7dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/th_logo"
            android:gravity="center_horizontal"
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_height="@dimen/VerticalPadding"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/lblTitle"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Height"
            android:text="Create your account"
            style="@style/TitleTextBold" />
        <View
            android:orientation="vertical"
            android:layout_height="12dip"
            android:layout_width="fill_parent" />
        <ScrollView
            android:id="@+id/mainScroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/registerContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:orientation="vertical"
                    android:layout_height="16dip"
                    android:layout_width="fill_parent" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cbTermsAndConditions"
                        local:MvxBind="Selected TermsAndConditionsAcknowledged"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="top|left"
                        android:button="@drawable/checkbox_round" />
                    <TextView
                        style="@style/TitleTextMultine"
                        android:id="@+id/lblTermsAndConditions"
                        local:MvxBind="Click NavigateToTermsAndConditions"
                        android:gravity="left"
                        android:layout_alignParentRight="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:text=""
                        android:textSize="16dip" />
                </LinearLayout>
                <View
                    android:orientation="vertical"
                    android:layout_height="16dip"
                    android:layout_width="fill_parent" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <Button
                        local:MvxBind="Click CloseCommand"
                        android:text="Cancel"
                        android:layout_weight=".475"
                        android:layout_width="0dip"
                        android:layout_height="@dimen/HeightButton"
                        android:singleLine="true" />
                    <View
                        android:layout_height="@dimen/Height"
                        android:layout_width="0dip"
                        android:layout_weight=".05"
                        android:visibility="invisible" />
                    <Button
                        local:MvxBind="Click CreateAccount"
                        android:text="@string/CreateAccountCreate"
                        android:layout_weight=".475"
                        android:layout_width="0dip"
                        android:layout_height="@dimen/HeightButton"
                        style="@style/ButtonMainStyle" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>