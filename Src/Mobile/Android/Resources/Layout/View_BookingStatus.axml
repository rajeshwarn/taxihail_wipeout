<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <View
        android:id="@+id/statusInfo"
        android:layout_width="fill_parent"
        android:layout_height="45dip" />
    <FrameLayout
        android:id="@+id/statusMapSection"
        android:layout_below="@id/statusInfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:layout_gravity="bottom">
        <apcurium.mk.booking.mobile.client.controls.TouchMap
            local:m4b_mapType="normal"
            local:m4b_uiCompass="false"
            local:m4b_uiZoomControls="false"
            android:id="@+id/mapStatus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:enabled="false"
            local:MvxBind="Pickup Order.PickupAddress; DropOff Order.DropOffAddress; TaxiLocation OrderStatusDetail; Center MapCenter"
            android:clickable="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_vertical"
            android:background="@drawable/StatusBottomBarBackground">
            <Button
                android:id="@+id/CancelBtn"
                style="@style/ButtonActionRedStyle"
                android:layout_marginTop="13dip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/HeightButton"
                android:layout_weight="1"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical"
                android:text="@string/StatusCancelButton"
                local:MvxBind="Click CancelOrder; Visibility IsCancelButtonVisible, Converter=Visibility" />
            <Button
                android:id="@+id/UnpairBtn"
                style="@style/ButtonActionRedStyle"
                android:layout_marginTop="13dip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/HeightButton"
                android:layout_weight="1"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical"
                android:text="@string/UnpairPayInCar"
                local:MvxBind="Click Unpair; Visibility IsUnpairButtonVisible, Converter=Visibility" />
            <Button
                android:id="@+id/CallBtn"
                style="@style/ButtonActionGrayStyle"
                android:layout_marginTop="13dip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/HeightButton"
                android:layout_weight="1"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical"
                android:text="@string/StatusCallButton"
                local:MvxBind="Click CallCompany; Visibility Settings.HideCallDispatchButton, Converter=InvertedVisibility" />
        </LinearLayout>
    </FrameLayout>
    <apcurium.mk.booking.mobile.client.controls.SlidingPanel
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        local:MvxBind="IsEnabled IsDriverInfoAvailable">
        <LinearLayout
            android:id="@+id/hiddenTopContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_weight="0.25"
                android:gravity="center"
                local:MvxBind="Visibility DriverPhotoHidden, Converter=InvertedVisibility">
                <Mvx.MvxImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:id="@+id/driverPhotoView"
                    local:MvxBind="ImageUrl OrderStatusDetail.DriverInfos.DriverPhotoUrl" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                local:MvxBind="Visibility DriverPhotoHidden, Converter=Visibility" />
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginTop="6dip"
                android:layout_weight="0.75">
                <LinearLayout
                    android:id="@+id/companyLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    local:MvxBind="Visibility CompanyHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/companyLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoCompany"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/companyValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.CompanyName"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip"
                        android:lines="1"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/driverLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/companyLayout"
                    local:MvxBind="Visibility VehicleDriverHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/driverLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoDriver"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/driverValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.FullName"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip"
                        android:lines="1"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/licenceLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/driverLayout"
                    local:MvxBind="Visibility VehicleLicenceHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/licenceLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoLicence"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/licenceValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.VehicleRegistration"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/taxiTypeLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/licenceLayout"
                    local:MvxBind="Visibility VehicleTypeHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/taxiTypeLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoTaxiType"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/taxiTypeValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.VehicleType"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/makeLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/taxiTypeLayout"
                    local:MvxBind="Visibility VehicleMakeHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/makeLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoMake"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/makeValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.VehicleMake"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/modelLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/makeLayout"
                    local:MvxBind="Visibility VehicleModelHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/modelLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoModel"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/modelValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.VehicleModel"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/colorLayout"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/modelLayout"
                    local:MvxBind="Visibility VehicleColorHidden, Converter=InvertedVisibility">
                    <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                        android:id="@+id/ColorLabel"
                        style="@style/BlackTextLabel"
                        android:text="@string/DriverInfoColor"
                        android:gravity="center_vertical|end"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/ColorValue"
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text OrderStatusDetail.DriverInfos.VehicleColor"
                        android:gravity="center_vertical|start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dip" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="10dip"
                    android:layout_marginEnd="10dip"
                    android:paddingEnd="10dip">
                    <ImageButton
                        local:MvxBind="Click CallTaxi; Visibility IsCallTaxiVisible, Converter=Visibility"
                        android:src="@drawable/phone"
                        style="@style/ButtonActionGrayStyle"
                        android:layout_marginTop="13dip"
                        android:layout_width="40dip"
                        android:layout_height="@dimen/HeightButton"
                        android:layout_marginEnd="10dip"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/CallDriver" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_weight="0"
                android:background="#646464"
                android:layout_below="@id/ColorLabel" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingBottom="4dip"
                android:background="@color/main_background_color">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical">
                    <TextView
                        style="@style/BlackTextLabel"
                        local:MvxBind="Text ConfirmationNoTxt"
                        android:gravity="center_horizontal|top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/statusWithEtaLabel"
                        style="@style/BlackTextLabelOneOrTwoLines"
                        android:gravity="center_horizontal|top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dip"
                        android:layout_marginRight="35dip"
                        local:MvxBind="Text StatusInfoText" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/grip"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    local:MvxBind="Visibility IsDriverInfoAvailable, Converter=Visibility" />
            </FrameLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:layout_weight="0"
                android:background="@drawable/statusDropShadow"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </apcurium.mk.booking.mobile.client.controls.SlidingPanel>
</RelativeLayout>