<?xml version="1.0" encoding="utf-8"?>
<apcurium.mk.booking.mobile.client.controls.HeaderedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="fill">
    <!-- <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/CmtConfirmBookingInfo"
            style="@style/MultilineFormLabelText"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" /> -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:text="@string/CmtCarNumber"
                android:paddingRight="8dip"
                android:gravity="right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4585"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                local:MvxBind="{'Text':{'Path':'CarNumber'}}" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:text="@string/CmtCardNumber"
                android:paddingRight="8dip"
                android:gravity="right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Card"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                local:MvxBind="{'Text':{'Path':'CardNumber'}}" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:text="@string/CmtTipAmount"
                android:paddingRight="8dip"
                android:gravity="right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                local:MvxBind="{'Text':{'Path':'TipAmountInPercent'}}" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:orientation="horizontal">
            <apcurium.mk.booking.mobile.client.controls.TipSlider
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/tipSlider"
                local:MvxBind="{'Percent': {'Path': 'PaymentPreferences.Tip', 'Mode':'TwoWay'}}"
                android:layout_marginBottom="4.0dp"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="-10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="fill"
            android:layout_alignParentBottom="true" />
        <apcurium.mk.booking.mobile.client.controls.StyledButton
            local:ButtonStyle="Green"
            android:id="@+id/ConfirmPaymentBtn"
            style="@style/ButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:text="@string/CmtConfirmPayment"
            android:layout_marginRight="5dp"
            local:MvxBind="{'Click': {'Path': 'ConfirmPayment'}, 'Clickable': {'Path': 'IsConfirmEnabled'}}"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true" />
        <apcurium.mk.booking.mobile.client.controls.StyledButton
            local:ButtonStyle="Green"
            android:id="@+id/ChangePaymentInfoBtn"
            style="@style/ButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:text="@string/CmtChangePaymentInfo"
            android:layout_marginRight="5dp"
            local:MvxBind="{'Click': {'Path': 'ChangePaymentInfo'}}"
            android:layout_gravity="bottom"
            android:layout_height="40dip"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true" />
        <apcurium.mk.booking.mobile.client.controls.StyledButton
            local:ButtonStyle="Green"
            android:id="@+id/CancelPaymentBtn"
            style="@style/ButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:text="@string/CmtCancelPayment"
            android:layout_marginRight="5dp"
            local:MvxBind="{'Click': {'Path': 'CancelPayment'}}"
            android:layout_gravity="bottom"
            android:layout_height="40dip"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
</apcurium.mk.booking.mobile.client.controls.HeaderedLayout>