<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="@string/DateTimePickerPickDate"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
         />
    <DatePicker
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:id="@+id/datePickerCtl"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text="@string/DateTimePickerPickTime"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="10dip" />
    <TimePicker
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:id="@+id/timePickerCtl"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"        
        android:gravity="center_horizontal"
        android:weightSum="1.0">
        <Button
            android:id="@+id/DoneButton"
            style="@style/ButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_weight="0.5"
            android:singleLine="true"
            android:lines="1"
            android:text="@string/DateTimePickerSetButton" />
        <Button
            android:id="@+id/NowButton"
            style="@style/ButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_weight="0.5"
            android:text="@string/TimeNow" />
    </LinearLayout>
</LinearLayout>