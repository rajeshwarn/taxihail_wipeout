<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/company_color"
    android:orientation="vertical"
    android:layout_margin="0px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/HorizontalDivider"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/label_text_color" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="0px"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/vehicleTypeImage"
                android:src="@drawable/taxi_badge_selected"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:scaleType="center" />
            <TextView
                android:id="@+id/vehicleTypeLabel"
                android:textSize="10dp"
                android:gravity="center|center"
                android:textColor="@color/label_text_color"
                android:textStyle="bold"
                android:layout_margin="0px"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/estimateFareLabel"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/label_text_color"
                android:textStyle="normal"
                android:layout_margin="0px"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>