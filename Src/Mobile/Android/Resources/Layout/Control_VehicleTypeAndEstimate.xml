<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="0px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/HorizontalDivider"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/label_text_color" />
    <LinearLayout
        android:id="@+id/VehicleSelectionAndEta"
        android:orientation="vertical"
        android:layout_margin="0px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/VehicleSelection"
            android:background="#e3e3e3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="52dp" />
        <LinearLayout
            android:id="@+id/VehicleSubSelection"
            android:background="#f0f0f0"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/RideEstimate"
        android:orientation="horizontal"
        android:layout_margin="0px"
        android:paddingTop="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="52dp">
        <apcurium.mk.booking.mobile.client.controls.widgets.VehicleTypeControl
            android:id="@+id/estimateSelectedVehicle"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="4dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                android:id="@+id/estimateFareAutoResizeLabel"
                android:textSize="19dp"
                android:paddingLeft="4dp"
                android:gravity="bottom|left"
                android:layout_gravity="top"
                android:textColor="@color/label_text_color"
                android:textStyle="normal"
                android:layout_margin="0px"
                android:layout_width="match_parent"
                android:layout_height="21dp" />
            <apcurium.mk.booking.mobile.client.controls.widgets.AutoResizeTextView
                android:id="@+id/EtaLabel"
                android:textSize="16dp"
                android:paddingLeft="4dp"
                android:gravity="top|left"
                android:layout_gravity="bottom"
                android:textColor="@color/label_text_color"
                android:textStyle="normal"
                android:layout_margin="0px"
                android:layout_width="match_parent"
                android:layout_height="21dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>