<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="0px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/HorizontalDivider"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/label_text_color" />
    <LinearLayout
        android:id="@+id/VehicleSelection"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_margin="0px"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="52dp" />
    <LinearLayout
        android:id="@+id/RideEstimate"
        android:orientation="horizontal"
        android:layout_margin="0px"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="52dp">
        <apcurium.mk.booking.mobile.client.controls.widgets.VehicleTypeControl
            android:id="@+id/estimateSelectedVehicle"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <apcurium.MK.Booking.Mobile.Client.Controls.Widgets.AutoResizeTextView
          android:id="@+id/estimateFareAutoResizeLabel"
          android:textSize="19dp"
          android:gravity="center"
          android:textColor="@color/label_text_color"
          android:textStyle="normal"
          android:layout_margin="0px"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>