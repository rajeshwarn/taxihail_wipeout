<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="LinkText" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">#003399</item>    
  </style>
  <style name="ButtonText">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">14dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
     <item name="android:padding">5dip</item>
    <item name="android:shadowRadius">2</item>
  </style>
    <style name="TitleText">
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="BigTitleText">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="SimpleText" >
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>        
    </style>
    <style name="SimpleTextItem" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#000000</item>        
    </style>
    <style name="HeaderGroupTitle" >
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#0A1F45</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailText"  >
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ListItemLabel" >
        <item name="android:textSize">14dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>        
    </style>
    <style name="ListItemValue" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#000000</item>        
    </style>
    <style name="ListItemSpinnerValue" >
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#0066cc</item>
		<item name="android:gravity">right</item>
    </style>	
	

</resources>