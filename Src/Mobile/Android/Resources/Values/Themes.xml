  	<!--- Styles -->

	<!--	Login Theme EditText -->

    <style name="custom_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:textColor">@color/edit_text_foreground_color</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
    </style>

    <!--	Main Theme EditText -->

    <style name="custom_FlatEditTextStyle" parent="@style/custom_EditTextStyle">
      <item name="android:layout_marginTop">8dp</item>
      <item name="android:layout_marginBottom">8dp</item>
      <item name="android:singleLine">true</item>
      <item name="android:paddingLeft">10dp</item>
      <item name="android:paddingRight">10dp</item>
      <item name="android:textCursorDrawable">@null</item>
      <item name="android:background">@drawable/edit_text_flat</item>
      <item name="android:textColor">@color/edit_text_foreground_color</item>
    </style>  

    <!--    Login Theme - TextView based on EditTextFlat -->

    <style name="custom_TextViewStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/edit_text_foreground_color</item>
    </style>

    <!--	Login Theme Button -->

    <style name="custom_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_marginBottom">13dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>        
        <item name="android:textSize">21dip</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">clip_vertical</item>
    </style>

    <!--	Login MainAction Button  -->

    <style name="ButtonMainStyle" parent="@style/custom_ButtonStyle">
    	<item name="android:textColor">@drawable/button_main_text_selector</item>
    	<item name="android:background">@drawable/button_main_selector</item>      
    	<item name="android:textSize">20dip</item>
    </style>

    <!--	Main Theme Action (colorized) Buttons  -->

    <style name="ButtonActionGreenStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_action_green_selector</item>
      <item name="android:textColor">@drawable/button_action_green_text_selector</item>      
    </style>

    <style name="ButtonActionRedStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_action_red_selector</item>
      <item name="android:textColor">@drawable/button_action_red_text_selector</item>      
    </style>

    <style name="ButtonActionGrayStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_action_gray_selector</item>
      <item name="android:textColor">@drawable/button_action_gray_text_selector</item>      
    </style>

    <style name="ButtonActionBlackStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_action_black_selector</item>
      <item name="android:textColor">@drawable/button_action_black_text_selector</item>      
    </style>




  	<!--- Themes -->

    <style name="LoginTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/login_background_color</item>
      	<item name="android:windowNoTitle">true</item>  
      	<item name="android:editTextStyle">@style/custom_EditTextStyle</item>              
      	<item name="android:buttonStyle">@style/custom_ButtonStyle</item>     
    </style>
    
    <style name="MainTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/main_background_color</item>
      	<item name="android:windowNoTitle">true</item>  
      	<item name="android:editTextStyle">@style/custom_FlatEditTextStyle</item>            
      	<item name="android:buttonStyle">@style/custom_ButtonStyle</item>     
    </style>
</resources>