	<!--- Dimensions -->
  <dimen name="Height">41dip</dimen>
  <dimen name="HeightButton">41dip</dimen>
  <dimen name="HeightEditText">40dip</dimen>
  <dimen name="HeightEditTextFlat">44dip</dimen>
	<dimen name="VerticalPadding">14dip</dimen>
