<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--- Colors -->
    <color name="main_background_color">#004785</color>		
	
	<color name="edit_text_background_color">#ffffff</color>
	<color name="edit_text_foreground_color">#000000</color>
	<color name="edit_text_border_color">#000000</color>				 
	
	<color name="button_border">#000000</color>
	<color name="button_background_color">#004785</color>
	<color name="button_pressed_background_color">#0469c2</color>
	<color name="button_hili_background_color">#004f94</color>
	<color name="button_hili_pressed_background_color">#004f94</color>
	
	<color name="listitem_text_line1_color">#000000</color>
	<color name="listitem_text_line2_color">#000000</color>	
	<color name="listitem_behind_color">#f0f0f0</color>	
	<color name="itemlist_cell_background_color">#ffffff</color>
	<color name="itemlist_cell_border_color">#727272</color>
	<color name="itemlist_cell_selected_semi_transparent_color">#dd727272</color>
	
	<color name="location_top_bar_color">#ffffff</color>	
	<color name="location_top_bar_separator_color">#000000</color>	
	
	<color name="top_bar_title_color">#000000</color>	
	
	<!--- Dimensions -->
	<dimen name="Height">44dip</dimen>
	<dimen name="VerticalPadding">22dip</dimen>
	<dimen name="DefaultFontSize">14dip</dimen>
	<dimen name="top_bar_title_font_size">22dp</dimen>

	<!--- Styles -->

	<!--- EditText -->
    <style name="custom_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:textColor">@color/edit_text_foreground_color</item>
    </style>

    <!--- Button -->
    <style name="custom_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:color">@color/edit_text_foreground_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20dip</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">clip_vertical</item>
    </style>

    <!--- Button Hightlighted -->
    <style name="ButtonHiliStyle" parent="@style/custom_ButtonStyle">
    	<item name="android:background">@drawable/button_hili_selector</item>
    </style>

    <!--- Custom Theme Design -->

    <style name="CustomTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/main_background_color</item>
      	<item name="android:windowNoTitle">true</item>  
      	<item name="android:editTextStyle">@style/custom_EditTextStyle</item>              
      	<item name="android:buttonStyle">@style/custom_ButtonStyle</item>     
    </style>
</resources>