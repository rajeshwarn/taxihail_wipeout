  <!--- Styles -->

	<!--- EditText -->
    <style name="custom_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:textColor">@color/edit_text_foreground_color</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
    </style>

    <style name="custom_FlatEditTextStyle" parent="@style/custom_EditTextStyle">
      <item name="android:layout_marginTop">8dp</item>
      <item name="android:layout_marginBottom">8dp</item>
      <item name="android:singleLine">true</item>
      <item name="android:paddingLeft">10dp</item>
      <item name="android:paddingRight">10dp</item>
      <item name="android:textCursorDrawable">@null</item>
      <item name="android:background">@drawable/edit_text_flat</item>
      <item name="android:textColor">@color/edit_text_foreground_color</item>
    </style>
  
    <!--- Button -->
    <style name="custom_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>        
        <item name="android:textSize">20dip</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">clip_vertical</item>
    </style>

    <!--- Buttons  -->
    <style name="ButtonMainStyle" parent="@style/custom_ButtonStyle">
    	<item name="android:textColor">@drawable/button_main_text_selector</item>
    	<item name="android:background">@drawable/button_main_selector</item>      
    	<item name="android:textSize">20dip</item>
    </style>

    <style name="ButtonNoBgGreenStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_nobg_green_selector</item>
      <item name="android:textColor">@color/button_green_border_color</item>      
    </style>

    <style name="ButtonNoBgRedStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_nobg_red_selector</item>
      <item name="android:textColor">@color/button_red_border_color</item>      
    </style>

    <style name="ButtonNoBgGrayStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_nobg_gray_selector</item>
      <item name="android:textColor">@color/button_gray_border_color</item>      
    </style>

    <style name="ButtonNoBgBlackStyle" parent="@style/custom_ButtonStyle">
      <item name="android:background">@drawable/button_nobg_black_selector</item>
      <item name="android:textColor">@color/button_black_border_color</item>      
    </style>


  <!--- Themes -->
    <style name="OfflineTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/offline_background_color</item>
      	<item name="android:windowNoTitle">true</item>  
      	<item name="android:editTextStyle">@style/custom_EditTextStyle</item>              
      	<item name="android:buttonStyle">@style/custom_ButtonStyle</item>     
    </style>
    
    <style name="OnlineTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/online_background_color</item>
      	<item name="android:windowNoTitle">true</item>  
      	<item name="android:editTextStyle">@style/custom_FlatEditTextStyle</item>            
      	<item name="android:buttonStyle">@style/custom_ButtonStyle</item>     
    </style>
</resources>