@model CustomerPortal.Web.Entities.Network.NetworkVehicle

<h2>Create a Vehicle Type</h2>

@using (Html.BeginForm("EditVehicle", "NetworkVehicles", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Market)

    <div class="control-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(x => x.Name, new { @class = "input-block-level" })
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(x => x.MaxNumberPassengers, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(x => x.MaxNumberPassengers, new { @class = "input-block-level" })
        </div>
    </div>

    <div class="control-group btn-right-alignment">
        <button type="submit" class="btn btn-primary span">Save Changes</button>

        <!-- TODO: If no vehicle type/market yet, go back to index else, go back to VehicleIndex -->
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn span" })

        @Html.ActionLink("Delete", "DeleteVehicle", new { @id = Model.Id }, new { @class = "btn span btn-danger" })
    </div>
}