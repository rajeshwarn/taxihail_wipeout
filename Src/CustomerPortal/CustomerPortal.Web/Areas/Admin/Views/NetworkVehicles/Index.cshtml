@model IEnumerable<CustomerPortal.Web.Areas.Admin.Models.MarketModel>

<h2>Network Markets</h2>
<div class='row'>
    <div class='span12'>
        <p>
            <a class="btn" href='@Url.Action("CreateMarket")'>Create Market</a>
        </p>
    </div>
    <div class="span12">
        <h5>Market</h5>
        <table class="table table-striped">
            @foreach (var market in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("VehicleIndex", market)">@market.Market</a>

                    </td>
                    <td>
                        @Html.ActionLink(
                            "Delete",
                            "DeleteMarket",
                            market,
                            new {@class = "btn span btn-danger", @onclick = "return confirm('Are you sure you wish to delete this market and all of its associated vehicle types?');"})
                    </td>
                </tr>
            }
        </table>
    </div>
</div>