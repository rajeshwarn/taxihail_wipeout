@model CustomerPortal.Web.Entities.Company
@{
    ViewBag.Title = "Index"; 
}
    
@using (Html.BeginForm())
{
    <table class="table table-striped table-condensed" id="settings-table">
        <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Client</th>
            <th>Action</th>
        </tr>
        </thead>

        @foreach (var setting in Model.CompanySettings.OrderBy(c => c.IsClientSetting).ThenBy(c => c.Key))
        {
            <tr>
                <td>
                    @setting.Key
                </td>
                <td>
                    @Html.TextBox("KEY_" + setting.Key, setting.Value)
                </td>
                <td>
                    @Html.DisplayFor(m => setting.IsClientSetting)
                </td>
            </tr>
        }

        <tr>
            <td>
                @Html.TextBox("NKEY1_Key", "")
            </td>
            <td>
                @Html.TextBox("NKEY1_Value", "")
            </td>
            <td>
                @Html.CheckBox("NKEY1_Client")
            </td>
        </tr>

        <tr>
            <td>
                @Html.TextBox("NKEY2_Key", "")
            </td>
            <td>
                @Html.TextBox("NKEY2_Value", "")
            </td>
            <td>
                @Html.CheckBox("NKEY2_Client")
            </td>
        </tr>
    </table>

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-primary" value="Save" />    
    <a href="@Url.Action("Init", new {id = Model.Id})" class="btn">Init</a>
    <a href="@Url.Action("Reset", new {id = Model.Id})" class="btn">Reset</a>    
}

<script type="text/javascript">
</script>