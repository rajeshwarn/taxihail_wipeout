@model CustomerPortal.Web.Models.VersionViewModel
@{
    ViewBag.Title = "Delete " + Model.ApplicationName + " version " + Model.Number;
    var id = ViewContext.RouteData.Values["id"];
}

<h2>@ViewBag.Title</h2>

<h3>Please confirm you want to delete this version</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a href="@Url.Action("Index", new {id})" class="btn btn-link">Back to version list</a>
    </p>
}