@model CustomerPortal.Web.Entities.Company
@{
    ViewBag.Title = "Create new company";
}

<div class="row">
    <div class="span12">
        <h1>@ViewBag.Title</h1>

        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>
                    Company information
                </legend>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.LabelFor(x => x.CompanyName)
                @Html.TextBoxFor(x => x.CompanyName)
                @Html.ValidationMessageFor(x => x.CompanyName)
                
                
                <legend>Contact information</legend>
                @Html.LabelFor(x => x.ProjectContactName)
                @Html.TextBoxFor(x => x.ProjectContactName)
                @Html.ValidationMessageFor(x => x.ProjectContactName)

                @Html.LabelFor(x => x.ProjectContactEmail)
                @Html.TextBoxFor(x => x.ProjectContactEmail)
                @Html.ValidationMessageFor(x => x.ProjectContactEmail)
                
                @Html.LabelFor(x => x.ProjectContactTel)
                @Html.TextBoxFor(x => x.ProjectContactTel)
                @Html.ValidationMessageFor(x => x.ProjectContactTel)
                
                <legend>Purchase order information</legend>
                @Html.LabelFor(x => x.Payment.PONumber)
                @Html.TextBoxFor(x => x.Payment.PONumber)

                @Html.LabelFor(x => x.Payment.PODate)
                @Html.TextBoxFor(x => x.Payment.PODate, new { @class = "datepicker" })

           
            </fieldset>
            <div class="form-actions">
                <button class="btn btn-primary" type="submit">Create company</button>
                <a href='@Url.Action("Index")' class="btn btn-link">Back to company list</a>
            </div>
        }
    </div>
</div>

@section Scripts {

    <script>
        $('.datepicker').datepicker();
    </script>

}