@model CustomerPortal.Web.Entities.Company

@{
    ViewBag.Title = "Delete " + Model.CompanyName;
}

<h2>@ViewBag.Title</h2>

<h3>Please confirm you want to delete this company</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a href="@Url.Action("Index")" class="btn btn-link">Back to company list</a>
    </p>
}