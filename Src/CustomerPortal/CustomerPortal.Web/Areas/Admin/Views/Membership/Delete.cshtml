@model ExtendedMongoMembership.MembershipAccount

@{
    ViewBag.Title = "Delete " + Model.UserName;
}

<h2>@ViewBag.Title</h2>

<h3>Please confirm you want to delete this user</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a href="@Url.Action("Index")" class="btn btn-link">Back to user list</a>
    </p>
}