<div class="modal hide confirmation-modal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>{{title}}</h3>
    </div>
    <div class="modal-body">
        <p>{{message}}</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary" data-action='confirm' >{{confirmButton}}</a>
        {{#if alwaysButton}}<a href="#" class="btn" data-action="always">{{alwaysButton}}</a>{{/if}}
        {{#if cancelButton}}<a href="#" class="btn" data-dismiss="modal">{{cancelButton}}</a>{{/if}}
    </div>
</div>