<div class="row">
    <div class="span6">
        <div class='well'>
            <div class='form-horizontal clearfix'>
                <legend>{{localize "Status"}}</legend>
                <div class='clearfix'>
                    <label class="control-label">{{localize "ConfirmationNumber"}}</label>
                    <div class="controls">
                        <label>{{ibsOrderId}}</label>
                    </div>
                </div>
                <div class='clearfix'>
                    <label class="control-label">{{localize "Status"}}</label>
                    <div class="controls">
                        <label>{{ibsStatusDescription}}</label>
                    </div>
                </div>
                {{#if driverInfos}}
                {{#if driverInfos.mobilePhone}}
                <div class='clearfix'>
                    <label class="control-label">{{localize "Driver Phone"}}</label>
                    <div class="controls">
                        <label><a href='tel:{{driverInfos.mobilePhone}}'>{{driverInfos.mobilePhone}}</a></label>
                    </div>
                </div>
                {{/if}}
                {{/if}}
                <div class='clearfix eta hidden'>
                    <label class="control-label">{{localize "ETA"}}</label>
                    <div class="controls">
                        <label id='etaValue'></label>
                    </div>
                </div>
                <div class='form-actions'>
                  <div class='buttons-container'>
                    <a href='#' class='btn btn-danger'  data-action='cancel'>{{localize "Cancel"}}</a>
                    <a href='tel:{{callNumber}}' class='btn btn-primary' rel='popover' data-action='call' data-placement='top' data-trigger='click' id='callDispatchButton'>{{localize "Call"}}</a>
                    <a href='#'  class='btn th-btn-new-ride'>{{localize "New Ride"}}</a>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
