<h4 class="table-title">{{localize "Edit Profile"}}</h4>
<div class="errors"></div>
<form class="form-horizontal clearfix" id="updateSettingsForm">
    <div class="control-group">
        <label class="control-label" for="inputName">{{localize "Name"}}</label>
        <div class="controls">
            <input type="text"  id="inputName" name="name" value="{{settings.name}}" class='input-block-level'>
        </div>
    </div>
    
    <div class="control-group">
        <label class="control-label" >{{localize "Email"}}</label>
        <div class="controls">
            <label class='input-block-level'>{{email}}</label>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputPhone">{{localize "Phone"}}</label>
        <div class="controls">
            <input type="text" id="inputPhone" name="phone" value="{{settings.phone}}" class='input-block-level'>
        </div>
    </div>

    <div class="control-group left-control-group">
        <label class="control-label" for="inputPassengers">{{localize "Passengers"}}</label>
        <div class="controls">
            <input type="text" id="inputPassengers" name="passengers" value="{{settings.passengers}}" class='input-block-level'>
        </div>
    </div>

    <div class="control-group right-control-group">
        <label class="control-label" for="inputPassengers">{{localize "Vehicle Type"}}</label>
        <div class="controls">
            <select name="vehicleTypeId" class="input-block-level">
                {{#each vehiclesList}}
                    {{#ifCond this.referenceDataVehicleId ../settings.vehicleTypeId}}
                        <option value="{{this.referenceDataVehicleId}}" selected>{{localize this.name}}</option>
                    {{else}}
                        <option value="{{this.referenceDataVehicleId}}">{{localize this.name}}</option>
                    {{/ifCond}}
                {{/each}}
            </select>
        </div>
    </div>


    <div id="chargeTypeDiv" class="control-group" style='clear:both;'>
        <label class="control-label" for="inputChargeType">{{localize "Charge Type"}}</label>
        <div class="controls">
            <select id="inputChargeType" name="chargeTypeId" class="input-block-level">
                {{#each paymentsList}}
                    {{#ifCond this.id ../settings.chargeTypeId}}
                        <option value="{{this.id}}" selected>{{localize this.display}}</option>
                    {{else}}
                        <option value="{{this.id}}">{{localize this.display}}</option>
                    {{/ifCond}}
                {{/each}}
            </select>
        </div>
    </div>
  
    {{#if isChargeAccountPaymentEnabled}}
    <div class="control-group">
      <label class="control-label" for="inputAccountNumber">{{localize "Account #"}}</label>
        <div class="controls">
            <input type="text" id="inputAccountNumber" name="accountNumber" value="{{settings.accountNumber}}" class='input-block-level'>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputCustomerNumber">{{localize "Account Rider #"}}</label>
        <div class="controls">
            <input type="text" id="inputCustomerNumber" name="customerNumber" value="{{settings.customerNumber}}" class='input-block-level'>
        </div>
    </div>
    {{/if}}

    {{#if displayTipSelection}}
    <div id="tipPercentageDiv" class="control-group">
      <label class="control-label" for="inputTipPercentage">{{localize "Tip"}}</label>
        <div class="controls">
            <select id="inputTipPercentage" name="defaultTipPercent" class="input-block-level">
                {{#each tipPercentages}}
                    {{#ifCond this.id ../defaultTipPercent}}
                        <option value="{{this.id}}" selected>{{localize this.display}}</option>
                    {{else}}
                        <option value="{{this.id}}">{{localize this.display}}</option>
                    {{/ifCond}}
                {{/each}}
            </select>
        </div>
    </div>
    {{/if}}

    {{#if showPayBackField}}
    <div id="payback-div" class="control-group">
        <label class="control-label" for="inputPayBack">{{localize "PayBack"}}</label>
        <div class="controls">
            <input type="text" id="inputPayBack" name="payBack" value="{{settings.payBack}}" data-error-style="inline" class='input-block-level'>
        </div>
    </div>
    {{/if}}

    <div class="control-group btn-right-alignment">
        <button type='submit' class='btn btn-primary span' data-loading-text="{{localize 'Loading'}}">{{localize "Saves changes"}}</button>
      <a href='#' class='btn span' data-action='startOver'>{{localize "Cancel"}}</a>
    </div>
</form>
