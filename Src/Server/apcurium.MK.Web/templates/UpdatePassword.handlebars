<h4 class="table-title">{{localize "Change your password"}}</h4>
<div class="errors"></div>
<div class="clearfix">
  <div class="control-group">
    <label class="control-label" for="currentpassword">{{localize "Current Password"}}</label>
    <div class="controls">
      <span style="float: right" class="valid-input hidden">
        <img src="assets/img/validFieldGreen.png" width="8" height="8" alt="valid field"/>
      </span>
      <input type="password" id="currentpassword" name="password" class='input-block-level'>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="newPassword">{{localize "New Password"}}</label>
    <div class="controls">
      <span style="float: right" class="valid-input hidden">
        <img src="assets/img/validFieldGreen.png" width="8" height="8" alt="valid field"/>
      </span>
      <input type="password" id="newPassword" name="new-password" class='input-block-level'>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="confirmPassword">{{localize "Confirm Password"}}</label>
    <div class="controls">
      <span style="float: right" class="valid-input hidden">
        <img src="assets/img/validFieldGreen.png" width="8" height="8" alt="valid field"/>
      </span>
      <input type="password" id="confirmPassword" name="confirm-password" class='input-block-level'>
    </div>
  </div>

  <div class="control-group btn-right-alignment">
    <button type="submit" id="bookBt" class='btn btn-primary span' data-loading-text="{{localize 'Loading'}}">{{localize "Update"}}</button>
    <a href='#' class='btn  span' data-action='startOver'>{{localize "Cancel"}}</a>
  </div>
</div>
