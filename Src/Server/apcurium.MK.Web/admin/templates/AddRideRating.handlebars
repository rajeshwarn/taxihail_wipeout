<div class='well'>
    <h4 class="table-title">{{localize "Add or Update Ratings"}}</h4>

    <form class="form-horizontal clearfix" >
        <div class="errors" style="margin-top: 10px;"></div>
        <h4 style="text-align: left">{{localize "Rating Questions"}}</h4>

		    <!-- TODO: Don't hard code. Do a loop for each supported languages -->
		    <div class="control-group">
			    {{#if ratingTypes.[0]}}
			    <label class="control-label">{{localize ratingTypes.[0].language}}</label>
			    {{else}}
          <label class="control-label">{{localize languages.[0]}}</label>
			    {{/if}}
          <div class="controls">
              <input type="text" id="inputRating0" name="ratingFields0" value="{{ratingTypes.[0].name}}" class='input-block-level' />
          </div>
        </div>
		    <div class="control-group">
			    {{#if ratingTypes.[1]}}
			    <label class="control-label">{{localize ratingTypes.[1].language}}</label>
			    {{else}}
          <label class="control-label">{{localize languages.[1]}}</label>
			    {{/if}}
          <div class="controls">
              <input type="text" id="inputRating1" name="ratingFields1" value="{{ratingTypes.[1].name}}" class='input-block-level' />
          </div>
        </div>
		    <div class="control-group">
          {{#if ratingTypes.[2]}}
			    <label class="control-label">{{localize ratingTypes.[2].language}}</label>
			    {{else}}
          <label class="control-label">{{localize languages.[2]}}</label>
			    {{/if}}
          <div class="controls">
              <input type="text" id="inputRating2" name="ratingFields2" value="{{ratingTypes.[2].name}}" class='input-block-level' />
          </div>
        </div>
        <div class="control-group">
          {{#if ratingTypes.[3]}}
          <label class="control-label">{{localize ratingTypes.[3].language}}</label>
          {{else}}
          <label class="control-label">{{localize languages.[3]}}</label>
          {{/if}}
          <div class="controls">
            <input type="text" id="inputRating3" name="ratingFields3" value="{{ratingTypes.[3].name}}" class='input-block-level' />
          </div>
        </div>
		
        <div class="control-group btn-right-alignment" >
          <button type='submit' class='btn btn-primary span' data-loading-text="{{localize 'Loading'}}">{{localize "Save"}}</button>
          <a href='#' class='btn  span' data-action='cancel'>{{localize "Cancel"}}</a>
          {{#unless isNew }}
          <a href='#' class='btn btn-danger  span' data-action='destroy'>{{localize "Remove"}}</a>
          {{/unless}}
        </div>
    </form>
</div>
