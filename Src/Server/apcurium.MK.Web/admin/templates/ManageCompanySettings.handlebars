
<h4 class="table-title">{{localize "Manage Settings"}}</h4>
<div class="message"></div>
{{#each settings}}
<div class="control-group">
	<label  class="control-label" style="margin-right:150px; white-space:nowrap;" >{{{localize key}}}</label>
	<div class="controls">
    {{#isBool value}}
      <select id="{{key}}" name="{{key}}" style="width:250px; margin-right:15px">
        <option value="{{value}}" selected>{{value}}</option>
        <option value="{{invertedBool value}}">{{invertedBool value}}</option>
      </select>
    {{else}}          
    {{#isNumber value}}
      <input type="number" style="width:250px; margin-right:15px"  id="{{key}}" name="{{key}}" value="{{value}}" class='input-block-level'/>
    {{else}}
		  <input type="text" style="width:250px; margin-right:15px"  id="{{key}}" name="{{key}}" value="{{value}}" class='input-block-level'/>
    {{/isNumber}}
  {{/isBool}}
	</div>
</div>
{{/each}} 
<div>
  <button type='submit' class='btn btn-primary' >{{localize "Save"}}</button>
</div>