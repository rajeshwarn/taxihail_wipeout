<div class='well clearfix'>
  <h4 class="table-title">{{localize "Manage Settings"}}</h4>

  <div class="message"></div>

  <div class='clearfix'>
    <div>
		{{#each settings}}
          <div class="control-group">
			<label class="control-label" style="margin-right:150px" >{{key}}</label>
			<div class="controls">
			  <input type="text" style="width:250px; margin-right:15px"  id="{{key}}" name="{{key}}" value="{{value}}" class='input-block-level'/>
			</div>
		  </div>
        {{/each}} 
    </div>
    <div>
      <button type='submit' class='btn btn-primary' >{{localize "Save"}}</button>
    </div>
</div>