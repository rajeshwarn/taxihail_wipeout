<div class='row'>
    <div class='span6'>
        <div class='well clearfix'>
            <div class='errors'></div>
            <div class="control-group">
                <label class="control-label" for="email">{{localize "Email Address"}}</label>
                <div class="controls">
                    <input type="text" name="email" class='input-block-level'/>
                </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="message">{{localize "Push Message"}}</label>
              <div class="controls">
                <textarea type="text" rows="5" name="message" class='input-block-level'/>
              </div>
            </div>
            <div class="control-group btn-right-alignment">
                <button type="submit" class='btn btn-primary span' data-action='sendpushnotification' data-loading-text="{{localize 'Loading'}}">{{localize "Send Push Notification"}}</button>
            </div>
        </div>
    </div>
</div>