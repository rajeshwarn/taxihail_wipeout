
{{#if isDefault}}
    <td>{{localize "Default"}}</td>
	<td>-</td>
	<td>-</td>
	<td>{{message}}</td>
	<td>{{localize applies}}</td>
	<td>0</td>
	<td>{{zoneList}}</td>
    
{{else}}
    <td>{{name}}</td>
    {{#if recurring}}
    <td>{{daysOfTheWeek}}</td>
    {{else}}
    <td>{{niceDate startTime}}</td>
    {{/if}}
    <td>{{niceTime startTime}}&nbsp;-&nbsp;{{niceTime endTime}}</td>
{{/if}}
    <td>
        <a type='button' class='btn btn-mini' href='#rules/edit/{{id}}'>
            <i class="icon-edit icon-white"></i>
        </a>
        {{#unless isDefault}}
        <button type='button' class='btn btn-mini btn-danger' data-action='delete'>
            <i class="icon-trash icon-white"></i>
        </button>
        {{/unless}}
    </td>
