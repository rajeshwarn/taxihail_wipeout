<div class='well'>
    <h4 class="table-title">{{localize "Add account"}}</h4>

    <div class="errors" style="margin-top: 10px;"></div>

    <form class="form-horizontal clearfix" >
        <div class="control-group">
            <label class="control-label">{{localize 'Account Number'}}</label>
            <div class="controls">
                <input type="text" id="inputAccountNumber" name="number" value="{{number}}" class='input-block-level'>
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label">{{localize 'Account Name'}}</label>
            <div class="controls">
                <input type="text" id="inputAccountName" name="name" value="{{name}}" class='input-block-level'>
            </div>
        </div>
        
        <br/>
        <h4 style="text-align: left">{{localize "Questions"}}</h4>

        <div class="control-group">
            <label class="control-label" >{{localize "Question #1"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[0].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #2"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[1].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #3"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[2].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #4"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[3].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #5"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[4].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #6"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[5].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #7"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[6].question}}" class='input-block-level'>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{localize "Question #8"}}</label>
            <div class="controls">
                <input type="text" name="questionFields" value="{{questions.[7].question}}" class='input-block-level'>
            </div>
        </div>
        
        <div class="control-group btn-right-alignment" >
          <button type='submit' class='btn btn-primary span' data-loading-text="{{localize 'Loading'}}">{{localize "Save"}}</button>
          <a href='#' class='btn  span' data-action='cancel'>{{localize "Cancel"}}</a>
          {{#unless isNew }}
          <a href='#' class='btn btn-danger  span' data-action='destroy'>{{localize "Remove"}}</a>
          {{/unless}}
        </div>
    </form>
</div>
