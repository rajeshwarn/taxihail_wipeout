<!-- PAYMENT OPTION-->
<h4 class="table-title">{{localize "Payment Mode"}}</h4>  

  <label class="control-label settingsLabel">{{{localize "Enable Prepaid / Web Payment"}}}</label>
  <select name="isPrepaidEnabled" class="settingsBox">
    <option value="{{isPrepaidEnabled}}" selected="">{{localizeBool isPrepaidEnabled true="Yes" false="No"}}</option>
    <option value="{{invertedBool isPrepaidEnabled}}">{{localizeBool isPrepaidEnabled true="No" false="Yes"}}</option>
  </select>

  <label class="control-label settingsLabel">{{{localize "Always Display Card on File on Web"}}}</label>
  <select name="alwaysDisplayCoFOption" class="settingsBox">
    <option value="{{alwaysDisplayCoFOption}}" selected>{{localizeBool alwaysDisplayCoFOption true="Yes" false="No"}}</option>
    <option value="{{invertedBool alwaysDisplayCoFOption}}">{{localizeBool alwaysDisplayCoFOption true="No" false="Yes"}}</option>
  </select>

  <label class="control-label settingsLabel">{{{localize "Ask for CVV when Booking"}}}</label>
  <select name="askForCVVAtBooking" class="settingsBox">
    <option value="{{askForCVVAtBooking}}" selected>{{localizeBool askForCVVAtBooking true="Yes" false="No"}}</option>
    <option value="{{invertedBool askForCVVAtBooking}}">{{localizeBool askForCVVAtBooking true="No" false="Yes"}}</option>
  </select>

<label class="control-label settingsLabel">{{{localize "Payment Method Mandatory"}}}</label>
<select name="creditCardIsMandatory" class="settingsBox">
    <option value="{{creditCardIsMandatory}}" selected="">{{localizeBool creditCardIsMandatory true="Yes" false="No"}}</option>
    <option value="{{invertedBool creditCardIsMandatory}}">{{localizeBool creditCardIsMandatory true="No" false="Yes"}}</option>
</select>

<label class="control-label settingsLabel">{{{localize "Disable In Car Payment"}}}</label>
<select name="isPaymentOutOfAppDisabled" class="settingsBox">
    <option value="None">{{localize "None (Out Of App Payment enabled for Web and App)"}}</option>
    <option value="AppOnly">{{localize "App Only (Out Of App Payment enabled for Web only)"}}</option>
    <option value="All">{{localize "All (Out Of App Payment disabled for Web and App)"}}</option>
</select>

  <label class="control-label settingsLabel" >{{{localize "Charge Account Payment"}}}</label>
  <select name="isChargeAccountPaymentEnabled" class="settingsBox">
    <option value="{{isChargeAccountPaymentEnabled}}" selected="" >{{localizeBool isChargeAccountPaymentEnabled true="Yes" false="No"}}</option>
    <option value="{{invertedBool isChargeAccountPaymentEnabled}}">{{localizeBool isChargeAccountPaymentEnabled true="No" false="Yes"}}</option>
  </select>

<div>
    <div id="warningChargeAccount" class="alert">
        <input type="checkbox" name="acceptChangeChargeAccount"> {{localize "I understand that disabling Charge Account will clear the charge account settings of ALL the users."}}</input>
    </div>
</div>

<label class="control-label settingsLabel" >{{{localize "Card on File Payment"}}}</label>
  <select  name="isPayInTaxiEnabled" class="settingsBox">
    <option value="{{isPayInTaxiEnabled}}" selected="" >{{localizeBool isPayInTaxiEnabled true="Yes" false="No"}}</option>
    <option value="{{invertedBool isPayInTaxiEnabled}}">{{localizeBool isPayInTaxiEnabled true="No" false="Yes"}}</option>
  </select>

  <label class="control-label settingsLabel" >{{{localize "Card on File Payment Method"}}}</label>
  <select name="paymentMode"  class="settingsBox">
    <option value="None">{{localize "None"}}</option>
    <option value="Cmt">{{localize "CMT Payments"}}</option>
    <option value="RideLinqCmt">{{localize "CMT RideLinQ Payments"}}</option>
    <option value="Braintree">{{localize "Braintree Payments"}}</option>
    <option value="Moneris">{{localize "Moneris Payments"}}</option>
    <option value="Fake">{{localize "Demo Payment Service"}}</option>
  </select>
  <br />

  <div id="isUnpairingDisabledDiv">
    <label class="control-label settingsLabel">{{{localize "Disable Unpairing"}}}</label>
    <select name="isUnpairingDisabled" class="settingsBox">
        <option value="{{isUnpairingDisabled}}" selected="">{{localizeBool isUnpairingDisabled true="Yes" false="No"}}</option>
        <option value="{{invertedBool isUnpairingDisabled}}">{{localizeBool isUnpairingDisabled true="No" false="Yes"}}</option>
    </select>
  </div>

  <div id="unpairingTimeOutDiv">
    <label class="control-label settingsLabel">{{{localize "Unpair Time Limit (seconds)"}}}</label>
    <input type="text" class="input-block-level settingsBox" name="unpairingTimeOut" value="{{unpairingTimeOut}}" />
  </div>

  <div id="cancelOrderOnUnpairDiv">
    <label class="control-label settingsLabel">{{{localize "Cancel Order on Unpairing"}}}</label>
    <select name="cancelOrderOnUnpair" class="settingsBox">
      <option value="{{cancelOrderOnUnpair}}" selected="">{{localizeBool cancelOrderOnUnpair true="Yes" false="No"}}</option>
      <option value="{{invertedBool cancelOrderOnUnpair}}">{{localizeBool cancelOrderOnUnpair true="No" false="Yes"}}</option>
    </select>
  </div>

  <div id="preAuthAmountEnabledDiv">
    <label class="control-label settingsLabel">{{{localize "Enable PreAuthorization "}}}</label>
    <select name="isPreAuthEnabled" class="settingsBox">
        <option value="{{isPreAuthEnabled}}" selected="">{{localizeBool isPreAuthEnabled true="Yes" false="No"}}</option>
        <option value="{{invertedBool isPreAuthEnabled}}">{{localizeBool isPreAuthEnabled true="No" false="Yes"}}</option>
    </select>
  </div>

  <div id="preAuthAmountDiv">
    <label class="control-label settingsLabel">{{{localize "PreAuthorization Amount"}}}</label>
    <input type="text" class="input-block-level settingsBox" name="preAuthAmount" value="{{preAuthAmount}}" />
  </div>

<!-- BRAINTREE SETTINGS-->
