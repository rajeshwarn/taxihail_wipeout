<div class='row'>
    <div class='span6'>
        <div class='well clearfix'>
            <div class='errors'></div>
			<div class="control-group">
				<label class="control-label">{{localize "Search Criteria"}}</label>
				<div class="controls">
					<label class="control-label-wide" for="searchcriteria">{{localize "Name/Email/Phone Number"}}</label>
					<input type="text" id="searchcriteria" autofocus name="settings.phone" value="{{settings.phone}}" class='input-block-level' data-action='findUserWithSearchCriteriaEnterOnTextfield'>
				</div>
			</div>

			<div class="control-group btn-right-alignment">
				<button id="buttonFindUsers" {{#if findButtonDisable}} disabled {{/if}} type="submit" class='btn btn-primary span' data-action='findUserWithSearchCriteria' data-loading-text="{{localize 'Loading'}}">{{localize "Find user"}}</button>
			</div>
        </div>
    </div>
</div>

{{#if accounts}}
<div class='row'>
	<div class='span12'>
		<div class='well clearfix'>
			<div class="control-group">
				<table class="table-accountslist">
					<thead>
						<tr>
							<th>{{ localize "Name"}}</th>
							<th>{{ localize "Email"}}</th>
							<th>{{ localize "Phone Number"}}</th>
							<th>{{ localize "Confirmed"}}</th>
							<th>{{ localize "Enabled"}}</th>
							<th>{{ localize "Action"}}</th>
						</tr>
					</thead>
					<tbody>
						{{#each accounts}}
						<tr>
							<td style="width:170px;">{{this.name}}</td>
							<td style="width:170px;">{{this.email}}</td>
							<td style="width:130px;">+{{this.dialCode}} {{this.settings.phone}}</td>
							
							<td style="width:50px;">{{#if this.isConfirmed }} + {{else}} - {{/if}}</td>
							<td style="width:50px;">{{#if this.disabledByAdmin }} - {{else}} + {{/if}}</td>

							<td style="width:260px;">
								{{#if this.currentAccount }}
								{{else}}
								<div>
									<button id="buttonSendSMS{{this.id}}" type="submit" class='btn btn-primary span buttontable1autocenter' data-action='sendConfirmationCodeSMS' email="{{this.email}}" accid="{{this.id}}">{{localize "Send Account Confirmation Code via SMS"}}</button>
								</div>

								<div>
									<button id="buttonEnableDisableAccount{{this.id}}" type="submit" class='btn btn-primary span buttontable1autocenter' data-action='enableDisableAccount' email="{{this.email}}" accid="{{this.id}}">  {{#if this.disabledByAdmin }} {{ localize "Enable Account"}} {{else}} {{ localize "Disable Account"}} {{/if}}</button>
								</div>
								<div>
									<button id="buttonUnlinkIBSAccount{{this.id}}" type="submit" class='btn btn-primary span buttontable1autocenter' data-action='unlinkIBSAccount' email="{{this.email}}" accid="{{this.id}}">{{localize "Unlink IBS Account(s)"}}</button>
								</div>
								{{/if}}
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{{/if}}