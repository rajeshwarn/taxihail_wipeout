@using System.Globalization
@model apcurium.MK.Web.Areas.AdminTH.Models.PromoStats

@if (Model != null)
{
    <h4 class="table-title">
        <b>Statistics for @Html.DisplayName(Model.PromoCode)</b>
    </h4>

    <p>
        <b>Number of Times Used : </b>
        @Model.UsageCount.ToString(CultureInfo.InvariantCulture)
    </p>
    <p>
        <b>Total Amount Redeemed ($) : </b>
        @Model.TotalUsageAmount.ToString(CultureInfo.InvariantCulture)
    </p>
    <p>
        <b>Users that Redeemed this Promotion : </b>
        @foreach (var userUsage in Model.UsersUsage)
        {
            if (@userUsage.Value > 1)
            {
                <p>@userUsage.Key (@userUsage.Value times)</p>
            }
            else
            {
                <p>@userUsage.Key (@userUsage.Value time)</p>
            }
        }
    </p>
}
else
{
    <h4>No statistics are available for this promotion</h4>
}

<div class="control-group">
    <br/>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn span" })
</div>
