@model apcurium.MK.Web.Areas.AdminTH.Models.PromoCode

<h4 class="table-title">Add a Promo Code</h4>
@if (@ViewBag.Error != null)
{
    <div class="alert alert-error" style="margin-top: 10px;">@ViewBag.Error</div>
}

@using (Html.BeginForm("Create", "PromoCode", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="control-group">
        @Html.LabelFor(x => x.Name, "Name", new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(x => x.Name, new { @class = "input-block-level" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="control-group btn-right-alignment">
        <button type="submit" class="btn btn-primary span">Create</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn span" })
    </div>
}