@using apcurium.MK.Web.Areas.AdminTH.Models
@model List<apcurium.MK.Web.Areas.AdminTH.Models.CompanyPreference>
          
@using (Html.BeginForm("Index", "TaxiHailNetwork", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="table table-striped">
        <tr>
            <th>CompanyId</th>
            <th>CanAccept</th>
            <th>CanDispatch</th>
        </tr>
        @{ int i = 1; }
        @foreach (var company in Model)
        {
            <tr>
                <td>
                    @company.CompanyId
                </td>
                <td>
                    @Html.CheckBox("tet", company.CanAccept)
                </td>
                <td>
                    @Html.CheckBox("test", company.CanAccept)
                </td>
            </tr>
            i = i + 1;
        }
    </table>


    <input type="submit" class="btn btn-primary" value="Save" />
}
